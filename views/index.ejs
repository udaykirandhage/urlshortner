<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>URL Shortener</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
    rel="stylesheet"
    crossorigin="anonymous"
  />
</head>
<body class="bg-light">
  <div class="container py-5">
    <div class="text-center mb-5">
      <h1 class="display-5 fw-semibold text-primary">URL Shrinker</h1>
      <p class="text-muted">Convert long links into short, shareable ones instantly.</p>
    </div>

    <form action="/shorten" method="post" class="row gy-2 gx-3 mb-4 align-items-center">
      <div class="col-md-9">
        <input
          type="url"
          name="fullUrl"
          id="fullUrl"
          required
          placeholder="Paste full URL here"
          class="form-control form-control-lg"
        />
      </div>
      <div class="col-md-3 d-grid">
        <button type="submit" class="btn btn-success btn-lg">Shorten URL</button>
      </div>
    </form>

    <div class="table-responsive">
      <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
          <tr>
            <th>Full URL</th>
            <th>Short URL</th>
            <th>Created At</th>
          </tr>
        </thead>
        <tbody>
          <% shortUrls.forEach(shortUrl => { %>
            <tr>
              <td><a href="<%= shortUrl.originalUrl %>" target="_blank"><%= shortUrl.originalUrl %></a></td>
              <td><a href="/<%= shortUrl.short_code %>" target="_blank">https://short.ly/<%= shortUrl.short_code %></a></td>
              <td><%= shortUrl.createdAt.toLocaleString() %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
    crossorigin="anonymous"
  ></script>
</body>
</html>
